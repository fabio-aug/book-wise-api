// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @unique @default(autoincrement())
  email    String   @unique
  name     String
  password String
  reviews  Review[]
}

model Book {
  id            Int      @id @unique @default(autoincrement())
  title         String
  author        String
  synopsis      String?
  image         String?
  sharing       Int
  averageReview Float
  reviews       Review[]
  genders       Gender[]
}

model Gender {
  id    Int    @id @unique @default(autoincrement())
  label String
  books Book[]
}

model Review {
  id     Int   @id @unique @default(autoincrement())
  idUser Int
  idBook Int
  stars  Float
  user   User  @relation(fields: [idUser], references: [id])
  book   Book  @relation(fields: [idBook], references: [id])
}
